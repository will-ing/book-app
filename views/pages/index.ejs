<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
</head>
<body>

  <nav>
    <%- include('./partials/navbar') %>
  </nav>

  <main>

  <%- include('./partials/header.ejs') %>
  <main>
   
      <% book_app.forEach( book => { %>
        <div class="container">
          <div class="title">
            <%= book.title %>
          </div> 
          <img src=<%= book.image_url %> alt=""> 
          <h3 class="author">
           By:<%= book.author %>
          </h3>
          <form method="get" action="/details/<%= book.id %>" >
            
            <button type="submit">Go to Details!</button>
          </form>
          <p class="isbn">
            <%= book.isbn %>
          </p>
        </div>
          <% })  %>
          
  </main>
  <%- include('./partials/footer.ejs') %>

  

</body>

</html>